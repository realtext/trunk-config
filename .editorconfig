# editorconfig.org
root = true


# Common settings
# ============
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Git configuration files uses tabs as indentation units
[.git*]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.go]
indent_size = 4
